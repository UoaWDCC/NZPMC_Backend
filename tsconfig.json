{
    "compilerOptions": {
        /* Docs: https://www.typescriptlang.org/tsconfig */ "target": "ES2022",
        "module": "commonjs",
        "outDir": "bin",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "checkJs": true,
        "allowJs": true,
        "moduleResolution": "node",
        "types": ["node", "reflect-metadata", "jest"],
        "lib": ["es6"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": true,
        "useUnknownInCatchVariables": false, // TypeScript 4.4+ only!
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "test/fireorm.ts",
        "test/createAdminScript.ts"
    ],
    "exclude": ["node_modules"]
}
